.chat-main


  .chat-main__group-list
    
    .chat-main__group-list--group-name
      = current_user.name
      
      
      .chat-main__group-list--member-name
        - @group.users.each do |user|
          = user.name
    

    .chat-main__group-list--edit-btn
      = link_to edit_group_path(@group), class: "edit" do 
        Edit


  .chat-main__message-list

    .messages
      = render @messages



  .chat-main__message-form
    
    .chat-main__message-form--box
      = form_for [@group, @message] do |f|
        .chat-main__message-form--box__submit-box
          .chat-main__message-form--box__submit-box--text
            = f.text_field :content, class: 'chat-main__message-form--box__submit-box--text', placeholder: 'type a message'
          .chat-main__message-form--box__submit-box--image-btn
            = f.label :image, class: ".chat-main__message-form--box__submit-box--image-btn" do
              = icon('fas', 'image')
              = f.file_field :image, class: "hidden"
              
        .chat-main__message-form--box__submit-bt
          = f.submit "Send", class: "chat-main__message-form--box__submit-btn"